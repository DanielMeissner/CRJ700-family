    <animation>
		<type>material</type>
		<object-name alias="/params/ScreenID" />
		<condition>
			<greater-than>
				<property alias="/params/powerN" />
				<value>24</value>
			</greater-than>		
		</condition>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop alias="/params/dimN" />
		</emission>
	</animation> 
