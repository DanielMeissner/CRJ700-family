<PropertyList>
	
    <path>EFIS-display.ac</path>
	
    <params>
		<ScreenID>Screen</ScreenID>
		<powerN>/systems/DC/outputs/mfd1</powerN>	
		<dimN>controls/lighting/display-norm</dimN>
		<lightmap-texture-path>Aircraft/Generic/generic-lightmap.png</lightmap-texture-path>
	</params>

    <animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>35</max-m>
	</animation>

	<animation>
		<!-- <name>PFD1</name>  -->
		<name alias="/params/ScreenID" />
		<object-name>EFIS_Screen</object-name>
	</animation>

