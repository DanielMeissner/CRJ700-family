<system name="Flaps">
	<channel name="Flaps">
		<kinematic name="Flaps Control">
			<input>fcs/flap-cmd-norm</input>
			<traverse>
				<setting>
					<position>  0 </position>
					<time>      0 </time>
				</setting>
				<setting>
					<position>  1 </position>
					<time>      0.5 </time>
				</setting>
				<setting>
					<position> 8 </position>
					<time>      2.49 </time>
				</setting>
				<setting>
					<position> 20 </position>
					<time>      4.75 </time>
				</setting>
				<setting>
					<position> 30 </position>
					<time>      3.715 </time>
				</setting>
				<setting>
					<position> 45 </position>
					<time>      5.573 </time>
				</setting>
			</traverse>
			<output>fcs/flap-pos-deg</output>
		</kinematic>
		<aerosurface_scale name="Flap Normalization">
			<input>fcs/flap-pos-deg</input>
			<domain>
				<min>  0 </min>
				<max> 45 </max>
			</domain>
			<range>
				<min> 0 </min>
				<max> 1 </max>
			</range>
			<output>fcs/flap-pos-norm</output>
		</aerosurface_scale>
	</channel>
</system>
